  <!-- Clay from stone chunks -->

  <RecipeDef>
    <defName>EM_ClayFromChunks</defName>
    <label>obtain clay from stone chunks</label>
    <description>Smash stone chunks to obtain clay.</description>
    <jobString>Obtaining clay from chunk.</jobString>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <workAmount>1000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <recipeUsers>
      <li>TableStonecutter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
