<Defs>


  <!-- Bricks Making -->

  <RecipeDef>
    <defName>EM_MakeBricks_Mud</defName>
    <label>make adobe bricks</label>
    <description>Shape mud into bricks ready for drying.</description>
    <jobString>Making adobe bricks.</jobString>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <workAmount>600</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <recipeUsers>
      <li>TableStonecutter</li>
      <li>CraftingSpot</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>EM_Mud</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>EM_Mud</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <EM_MudBricks_Fresh>15</EM_MudBricks_Fresh>
    </products>
  </RecipeDef>

