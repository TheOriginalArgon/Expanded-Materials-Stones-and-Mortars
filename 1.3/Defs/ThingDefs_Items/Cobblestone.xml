        <destroySoundMedium>BuildingDestroyed_Stone_Medium</destroySoundMedium>
        <destroySoundLarge>BuildingDestroyed_Stone_Big</destroySoundLarge>
    </StuffCategoryDef>

    <ThingCategoryDef>
